<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-ubequ-hardware-plugin"
        version="0.0.1-dev">

   <name>Ubequ hardware plugin</name>
   <description>A cordova plugin for hardware interaction.</description>

   <repo>https://github.com/irfanabyan/Hardware-Plugin</repo>
   <license>Apache 2.0</license>
   <keywords>cordova, bluetooth, printer, pos, text, barcode, image, base64, qrcode</keywords>

   <author>Ubequ</author>

   <!-- cordova -->
   <engines>
      <engine name="cordova" version=">=3.0.0" />
   </engines>

   <js-module src="www/BluetoothPrinter.js" name="UbequBluetoothPrinter">
      <clobbers target="UbequBTPrinter" />
   </js-module>

   <!-- android -->
   <platform name="android">
      <config-file target="res/xml/config.xml" parent="/*">
         <feature name="BluetoothPrinter">
            <param name="android-package" value="com.ubequpos.cordova.printer.bluetooth.BluetoothPrinter"/>
         </feature>
      </config-file>

      <config-file target="AndroidManifest.xml" parent="/*">
         <uses-permission android:name="android.permission.BLUETOOTH" />
      </config-file>

      <source-file src="src/android/UbequBTPrinter.java" target-dir="src/br/com/cordova/printer/bluetooth" />

   </platform>
</plugin>
